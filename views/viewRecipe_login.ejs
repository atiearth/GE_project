<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipe</title>
  <link rel="icon" type="image/x-icon" href="/image/logo.png">

    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

      <style>
        .card {
          margin: 1rem;
        }
      
        @media (max-width: 768px) {
          .card {
            max-width: 90%; /* For smaller screens like iPhone */
          }
        }
      
        @media (min-width: 1200px) {
          .card {
            max-width: 600px; /* For larger screens like PC monitors */
          }
        }
      </style>

</head>

<body class="d-flex flex-column min-vh-100 bg-main">
  <!-- nav-bar -->
  <div class="container-fluid">
    <div class="nav-bar">
      <header
        class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center text-dark text-decoration-none mb-2 mb-md-0">
          <img src="/image/logo.png" alt="Logo Description" width="40" height="40">
          <h4><span class="header-icon">หุงเอง</span>กินเอง</h4>
        </a>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-2 link-dark">Home</a></li>
          <li><a href="/user/recipe" class="nav-link px-2 link-dark">My Recipes</a></li>
          <li><a href="/user/profile" class="nav-link px-2 link-dark">Profile</a></li>
          <li><a href="/about" class="nav-link px-2 link-dark">About</a></li>
        </ul>

        <div class="col-12 col-md-3 text-center text-md-end">
          <a href="/user/logout">
            <button type="button" class="btn btn-outline-primary me-2 rounded-pill">Logout</button>
          </a>

        </div>
      </header>
    </div>
  </div>
  <!-- end-nav -->
  <% post.forEach((post)=> { %>
    <div class="container mt-3 text-center">
      <!-- Recipe Header -->
      <h1>
        <%= post.Header %>
      </h1>

      <!-- Recipe Image -->
      <div class="mt-4">
        <img src="<%= post.Image %>" alt="Recipe Image" class="img-fluid rounded" width="500px" height="500px">
      </div>

      <!-- Ingredients in Box -->
      <div class="mt-4 d-flex justify-content-center">
        <div class="card" style="width: 100%; max-width: 900px;">
          <div class="card-body">
            <h2 class="card-title">Ingredients</h2>
            <ul class="list-group list-group-flush text-start">
              <% post.Ingredients.split("\n").forEach((item)=> { %>
                <li class="list-group-item">
                  <%= item %>
                </li>
                <% }) %>
            </ul>
          </div>
        </div>
      </div>

      <!-- Cooking Instructions in Box -->
      <div class="mt-4 d-flex justify-content-center">
        <div class="card" style="width: 100%; max-width: 900px;">
          <div class="card-body">
            <h2 class="card-title">How to Cook</h2>
            <ol class="list-group list-group-numbered text-start">
              <% post.How_To.split("\n").forEach((item)=> { %>
                <li class="list-group-item">
                  <%= item %>
                </li>
                <% }) %>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <% }) %>

</body>

<script src="/script/action.js"></script>
<script src="/script/motion.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</html>